{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "ES6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dest",
      "rootDir": "./", 
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "allowJs": true,
      "resolveJsonModule": true,
   }
}
